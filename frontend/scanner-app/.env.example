# ServiceBridge Scanner Application Environment Variables
# Copy this file to .env and update with your values

# Backend API Configuration
VITE_API_URL=http://localhost:5196
VITE_SIGNALR_URL=http://localhost:5196/inventoryhub

# Application Metadata
VITE_APP_NAME=ServiceBridge Scanner
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Mobile Inventory Scanner

# Development Settings
VITE_DEV_TOOLS=true
VITE_MOCK_API=false
VITE_LOG_LEVEL=info

# Security Configuration
VITE_CSRF_ENABLED=true
VITE_REQUEST_SIGNING=true

# Performance Settings
VITE_CACHE_DURATION=300000
VITE_RETRY_ATTEMPTS=3
VITE_TIMEOUT=15000

# Scanner Features
VITE_ENABLE_CAMERA=true
VITE_ENABLE_BARCODE_SCANNER=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=true

# Real-time Features
VITE_ENABLE_REAL_TIME=true
VITE_RECONNECT_INTERVAL=5000

# Authentication
VITE_TOKEN_REFRESH_BUFFER=300000

# Build Configuration
NODE_ENV=development
VITE_BUILD_TARGET=esnext