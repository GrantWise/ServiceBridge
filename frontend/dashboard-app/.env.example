# ServiceBridge Dashboard App Environment Configuration

# Backend API Configuration
VITE_API_URL=http://localhost:5196
VITE_SIGNALR_URL=http://localhost:5196/inventoryhub
VITE_GRPC_URL=http://localhost:5197

# Application Metadata
VITE_APP_NAME=ServiceBridge Dashboard
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Enterprise Multi-Protocol Dashboard

# Development Settings
VITE_DEV_TOOLS=true
VITE_MOCK_API=false

# Security Configuration (Development)
VITE_CSRF_ENABLED=true
VITE_REQUEST_SIGNING=true

# Performance Settings
VITE_CACHE_DURATION=300000
VITE_RETRY_ATTEMPTS=3
VITE_TIMEOUT=30000

# Feature Flags
VITE_FEATURE_GRPC=true
VITE_FEATURE_REAL_TIME=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_REPORTS=true
VITE_FEATURE_USER_MANAGEMENT=true

# Authentication
VITE_TOKEN_REFRESH_BUFFER=300000

# Build Configuration
NODE_ENV=development
VITE_BUILD_TARGET=esnext